{
  "name": "@corespeed/zypher",
  "version": "0.6.1",
  "license": "Apache-2.0",
  "exports": {
    ".": "./src/mod.ts",
    "./tools": "./src/tools/mod.ts"
  },
  "tasks": {
    "start": "deno run -A bin/cli.ts",
    "acp": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run bin/acp.ts",
    "compile": "deno compile --allow-all --frozen=true --output dist/cli bin/cli.ts",
    "build:npm": "deno run -A scripts/build_npm.ts",
    "publish:npm": "cd npm && npm publish --access restricted",
    "test": "deno test -A --trace-leaks",
    "test:watch": "deno test -A --watch",
    "checkall": "deno fmt && deno lint && deno check .",
    "clean": "rm -rf dist/"
  },
  "compilerOptions": {
    "verbatimModuleSyntax": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"]
    }
  },
  "imports": {
    "acp": "npm:@agentclientprotocol/sdk@^0.8.0",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@corespeed/mcp-store-client": "jsr:@corespeed/mcp-store-client@^1.9.0",
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@zypher/": "./src/",
    "@aws-sdk/client-s3": "npm:@aws-sdk/client-s3@^3.940.0",
    "@aws-sdk/s3-request-presigner": "npm:@aws-sdk/s3-request-presigner@^3.940.0",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@openai/openai": "npm:openai@6.9.1",
    "@anthropic-ai/sdk": "npm:@anthropic-ai/sdk@^0.71.0",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.23.0",
    "chalk": "npm:chalk@^5.6.2",
    "diff": "npm:diff@8.0.2",
    "rxjs": "npm:rxjs@^7.8.2",
    "rxjs-for-await": "npm:rxjs-for-await@^1.0.0",
    "xstate": "npm:xstate@^5.24.0",
    "zod": "npm:zod@^4.1.13"
  },
  "nodeModulesDir": "auto",
  "exclude": ["dist/", "node_modules/", "npm/", "docs/"]
}
